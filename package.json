{
  "name": "dg-shop-server",
  "version": "1.0.0",
  "description": "Backend for DG_shop",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon --watch src --exec ts-node ./src/server.ts",
    "build": "tsc",
    "seed": "ts-node ./src/seed.ts",
    "lint": "tsc --noEmit",
    "format": "prettier --write .",
    "check": "tsc --project tsconfig.json"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.20.0",
    "morgan": "^1.10.1",
    "node-fetch": "^3.3.2",
    "razorpay": "^2.9.6",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.25",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.7",
    "@types/node": "^20.19.25",
    "@types/node-fetch": "^2.6.13",
    "@types/uuid": "^9.0.7",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "prettier": "^3.2.5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "license": "MIT",
  "author": "DG_shop Team",
  "type": "commonjs"
}
